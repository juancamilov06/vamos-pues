        <activity
            android:name=".main.ZoneActivity"
            android:label="@string/title_activity_zone"
            android:theme="@style/AppTheme" />
        <activity android:name=".main.PortalActivity" />
        <activity android:name=".main.PackagesActivity" />
        <activity
            android:name=".main.MenuActivity"
            android:label="@string/title_activity_menu"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".main.InfoActivity"
            android:label="@string/title_activity_info" />
        <activity
            android:name=".main.ReviewActivity"
            android:label="@string/title_activity_review"
            android:theme="@style/AppTheme" />
        <activity android:name=".main.EventActivity" />
        <activity
            android:name=".main.PackageDetailActivity"
            android:label="@string/title_activity_package_detail"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".main.CreatePackageActivity"
            android:label="@string/title_activity_create_package"
            android:theme="@style/AppTheme" />

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <activity
            android:name=".main.ProfileActivity"
            android:label="@string/title_activity_profile"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".main.EventDetailActivity"
            android:label="@string/title_activity_event_detail"
            android:theme="@style/AppTheme" />
