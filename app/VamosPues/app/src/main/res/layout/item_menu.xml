<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary">

    <co.vamospues.vamospues.helpers.GillSansSemiBoldTextView
        android:padding="16dp"
        android:layout_width="match_parent" android:id="@+id/name_label"
        android:textSize="18sp"
        android:gravity="end"
        android:text="Name"
        android:textColor="@color/colorWhite"
        android:layout_height="wrap_content" />

    <LinearLayout android:gravity="end" android:layout_marginTop="4dp"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <co.vamospues.vamospues.helpers.GillSansLightTextView
            android:layout_width="wrap_content" android:id="@+id/price_label"
            android:textSize="18sp"
            android:gravity="end"
            android:text="$20000"
            android:textColor="@color/colorWhite"
            android:layout_height="wrap_content" />

        <co.vamospues.vamospues.helpers.GillSansBoldTextView
            android:layout_width="wrap_content"
            android:layout_marginLeft="8dp"
            android:textSize="18sp"
            android:gravity="end" android:id="@+id/discount_label"
            android:text="-20%"
            android:textColor="@color/colorAccent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorDivider"/>

</LinearLayout>