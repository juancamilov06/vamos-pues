<?xml version="1.0" encoding="utf-8"?>
<com.chauthai.swipereveallayout.SwipeRevealLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipe_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:dragEdge="right"
    app:mode="same_level">

    <FrameLayout
        android:id="@+id/delete_layout"
        android:layout_width="100dp"
        android:layout_height="75dp"
        android:background="@color/colorAccent">

        <ImageView app:srcCompat="@drawable/ic_cancel"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@color/colorPrimaryDark">

        <ImageView android:id="@+id/place_background"
            android:layout_width="match_parent"
            android:scaleType="centerCrop"
            android:layout_height="match_parent" />

        <co.vamospues.vamospues.helpers.GillSansSemiBoldTextView
            android:text="Disco Name"
            android:layout_gravity="start|center_vertical"
            android:layout_width="wrap_content"
            android:paddingLeft="32dp"
            android:textColor="@color/colorWhite"
            android:id="@+id/name_label"
            android:textSize="20sp"
            android:layout_height="wrap_content" />

        <ImageView android:src="@drawable/filter_arrow"
            android:layout_width="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_gravity="center|end"
            android:layout_height="wrap_content" />

    </FrameLayout>

</com.chauthai.swipereveallayout.SwipeRevealLayout>