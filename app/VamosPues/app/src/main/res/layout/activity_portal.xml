<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_portal"
    android:background="@color/colorPrimaryDark"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="co.vamospues.vamospues.main.PortalActivity"
    android:orientation="vertical">

    <FrameLayout android:layout_weight="0.4"
        android:layout_width="match_parent"
        android:background="@drawable/gradient_background"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:id="@+id/place_background"
            android:layout_height="match_parent" />

        <com.mikhaellopez.circularimageview.CircularImageView
            android:layout_width="150dp"
            android:layout_gravity="center"
            android:id="@+id/place_image"
            app:civ_border="true"
            android:layout_height="150dp" />

        <LinearLayout android:padding="16dp"
            android:gravity="center"
            android:id="@+id/favorites_view"
            android:background="@color/colorBlackTransparent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <co.vamospues.vamospues.helpers.GillSansSemiBoldTextView
                android:layout_width="wrap_content"
                android:text="AGREGAR A FAVORITOS"
                android:textColor="@color/colorWhite"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </FrameLayout>

    <LinearLayout android:layout_weight="0.6"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <LinearLayout android:layout_weight="0.5"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout android:layout_weight="0.5"
                android:layout_width="match_parent" android:id="@+id/info_button"
                android:layout_height="match_parent">

                <ImageView app:srcCompat="@drawable/info_bg"
                    android:layout_width="match_parent"
                    android:scaleType="centerCrop"
                    android:layout_height="match_parent" />

                <co.vamospues.vamospues.helpers.GillSansSemiBoldTextView
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:text="Informacion"
                    android:textColor="@color/colorWhite"
                    android:layout_height="wrap_content" />

            </FrameLayout>

            <FrameLayout android:layout_weight="0.5"
                android:id="@+id/menu_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView app:srcCompat="@drawable/menu_bg"
                    android:layout_width="match_parent"
                    android:scaleType="centerCrop"
                    android:layout_height="match_parent" />

                <co.vamospues.vamospues.helpers.GillSansSemiBoldTextView
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:text="Carta"
                    android:textColor="@color/colorWhite"
                    android:layout_height="wrap_content" />

            </FrameLayout>

            <FrameLayout android:layout_weight="0.5"
                android:id="@+id/reviews_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView app:srcCompat="@drawable/reviews_bg"
                    android:layout_width="match_parent"
                    android:scaleType="centerCrop"
                    android:layout_height="match_parent" />

                <co.vamospues.vamospues.helpers.GillSansSemiBoldTextView
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:text="ReseÃ±as"
                    android:textColor="@color/colorWhite"
                    android:layout_height="wrap_content" />

            </FrameLayout>

        </LinearLayout>

        <FrameLayout android:layout_weight="0.5"
            android:id="@+id/packages_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView app:srcCompat="@drawable/build_bg"
                android:layout_width="match_parent"
                android:scaleType="centerCrop"
                android:layout_height="match_parent" />

            <co.vamospues.vamospues.helpers.GillSansSemiBoldTextView
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:text="Arma tu rumba"
                android:textSize="20sp"
                android:textColor="@color/colorWhite"
                android:layout_height="wrap_content" />

        </FrameLayout>

    </LinearLayout>

</LinearLayout>
