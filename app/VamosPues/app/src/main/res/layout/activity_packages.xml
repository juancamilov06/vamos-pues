<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_packages"
    android:layout_width="match_parent"
    android:background="@color/colorPrimaryDark"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="co.vamospues.vamospues.main.PackagesActivity">

    <android.support.v7.widget.Toolbar android:id="@+id/toolbar"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <co.vamospues.vamospues.helpers.GillSansLightTextView
                android:layout_width="wrap_content"
                android:text="PERSONALIZADO"
                android:textSize="18sp"
                android:textColor="@color/colorWhite"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </android.support.v7.widget.Toolbar>

    <FrameLayout android:layout_weight="0.7"
        android:id="@+id/build_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView app:srcCompat="@drawable/custom_bg"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <co.vamospues.vamospues.helpers.GillSansSemiBoldTextView
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:textColor="@color/colorWhite"
            android:text="Arma tu rumba"
            android:layout_height="wrap_content" />

    </FrameLayout>

    <LinearLayout android:padding="16dp"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:gravity="center" android:orientation="horizontal"
        android:layout_height="wrap_content">

        <co.vamospues.vamospues.helpers.GillSansLightTextView
            android:layout_width="wrap_content"
            android:text="PAQUETES"
            android:textSize="18sp"
            android:textColor="@color/colorWhite"
            android:layout_height="wrap_content" />

        <co.vamospues.vamospues.helpers.GillSansSemiBoldTextView
            android:text=" DEL SITIO"
            android:textSize="18sp"
            android:layout_marginLeft="4dp"
            android:textColor="@color/colorWhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout android:layout_weight="0.3"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <GridView android:id="@+id/packages_grid"
            android:layout_width="match_parent"
            android:numColumns="2"
            android:layout_height="match_parent"/>

    </LinearLayout>


</LinearLayout>
