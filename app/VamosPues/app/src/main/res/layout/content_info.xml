<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/menu_content_scroll"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="co.vamospues.vamospues.main.InfoActivity"
    tools:showIn="@layout/activity_info">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout android:padding="16dp"
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content">

            <co.vamospues.vamospues.helpers.GillSansSemiBoldTextView
                android:layout_width="wrap_content"
                android:id="@+id/description_label"
                android:textColor="@color/colorWhite"
                android:text="Descripcion"
                android:textSize="18sp"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false">

                <LinearLayout android:padding="32dp"
                    android:id="@+id/hours_button"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView app:srcCompat="@drawable/ic_clock"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <co.vamospues.vamospues.helpers.GillSansLightTextView
                        android:layout_width="wrap_content"
                        android:textColor="@color/colorWhite"
                        android:layout_marginTop="8dp"
                        android:text="HORARIO"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout android:padding="32dp"
                    android:layout_weight="0.5"
                    android:id="@+id/location_button"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView app:srcCompat="@drawable/ic_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <co.vamospues.vamospues.helpers.GillSansLightTextView
                        android:layout_width="wrap_content"
                        android:textColor="@color/colorWhite"
                        android:layout_marginTop="8dp"
                        android:text="¿DONDE QUEDA?"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout android:padding="32dp"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:id="@+id/music_button"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView app:srcCompat="@drawable/ic_music"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <co.vamospues.vamospues.helpers.GillSansLightTextView
                        android:layout_width="wrap_content"
                        android:textColor="@color/colorWhite"
                        android:layout_marginTop="8dp"
                        android:text="MÚSICA"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout android:padding="32dp"
                    android:layout_weight="0.5"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:id="@+id/services_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView app:srcCompat="@drawable/ic_services"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <co.vamospues.vamospues.helpers.GillSansLightTextView
                        android:layout_width="wrap_content"
                        android:textColor="@color/colorWhite"
                        android:layout_marginTop="8dp"
                        android:text="SERVICIOS"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout android:padding="16dp"
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content">

            <co.vamospues.vamospues.helpers.GillSansSemiBoldTextView
                android:layout_width="wrap_content"
                android:textColor="@color/colorWhite"
                android:text="Proximos Eventos"
                android:textSize="18sp"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
